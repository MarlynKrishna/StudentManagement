<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Edit Post</h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with(model: @student, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :course %>
        <%= form.text_field :course, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :Fee %>
        <%= form.text_area :Fee, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
      <%= button_to 'Back to home', href="/students"%>
    <% end %>
  </div>
</div>